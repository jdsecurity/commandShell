[mysqld]
datadir=/var/slog/mysql/data
socket=/var/slog/mysql/run/mysql.sock
user=mysql
# Disabling symbolic-links is recommended to prevent assorted security risks
symbolic-links=0

[mysqld_safe]
log-error=/var/slog/mysql/log/mysqld.log
pid-file=/var/slog/mysql/run/mysqld.pid

[client]
#password       = your_password
port            = 3306
socket          = /var/slog/mysql/run/mysql.sock
